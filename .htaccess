# block access to all Apache config files
<FilesMatch "^.ht*">
	Order allow,deny
	Deny from all
</FilesMatch>

# block access by file extension
<FilesMatch "(\.sql|\.inc.php)$">
	Order allow,deny
	Deny from all
</FilesMatch>

# block verboten directories
RedirectMatch 404 /classes(/|$)
RedirectMatch 404 /logs(/|$)

# block access to secrets.xml
<Files secrets.xml>
	Order allow,deny
	Deny from all
</Files>

# force processing of canvashack.css as PHP
<Files canvashack.css>
	ForceType application/x-httpd-php
	SetHandler application/x-httpd-php
</Files>

# force processing of canvashack.js as PHP
<Files canvashack.js>
	ForceType application/x-httpd-php
	SetHandler application/x-httpd-php
</Files>
